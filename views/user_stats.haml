.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %i.fa.fa-fw.fa-users
          %span.text User Stats
      .table-responsive
        .table.table-hover
          %table.table.table-hover
            -if @stats.nil?
              %tr
                %td No users found
            -else
              -@stats.each do |row|
                %tr
                  %th{scope: :row}
                    %a{href: "/user/#{row[:user].id}"}=row[:user].first_name
                  %td.numeric="#{row[:successes]}/#{row[:total]} (#{(row[:successes].to_f/row[:total].to_f * 100).to_i rescue 'N/A'}%)"
