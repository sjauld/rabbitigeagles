.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %i.fa.fa-fw.fa-users
          %span.text User Stats
      .table-responsive
        .table.table-hover
          %table.table.table-hover
            -if @stats.nil?
              %tr
                %td No users found
            -else
              -@stats.each do |user|
                %tr
                  %th{scope: :row}
                    %a{href: "/users/#{user[:old_username]}"}=user[:old_username]
                  %td.numeric="#{user[:successes]}/#{user[:total]} (#{(user[:successes].to_f/user[:total].to_f * 100).to_i rescue 'N/A'}%)"
