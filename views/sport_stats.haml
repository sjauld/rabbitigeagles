-if @stats.nil?
  %h1 No sports Found :(
-else
  %h1 Sport Stats!
  %table.table
    %thead
      %tr
        %th{scope: :col} Sport
        %th{scope: :col} Stats
    %tbody
      -@stats.each do |sport|
        %tr
          %th{scope: :row}
            %a{href: "/sports/#{sport[:sport]}"}=sport[:sport]
          %td="#{sport[:successes]}/#{sport[:total]} (#{(sport[:successes].to_f/sport[:total].to_f * 100).to_i rescue 'N/A'}%)"
